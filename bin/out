#!/usr/bin/ruby
require 'json'
require 'net/http'
require 'uri'
require 'pp'

input = JSON.parse(ARGV.first)

if ! input.has_key? "source"
  puts "Concourse input valiation failed, missing blah"
  exit 132
end
source = input['source']

if ! source.has_key? "message"
  puts "No message provided in resource source!"
  exit 132
end
if ! source.has_key? "server"
  puts "No server provided in resource source!"
  exit 132
end

uri = URI.parse(source["server"])
request = Net::HTTP::Post.new(uri)
request.body = source["message"]
req_options = {
  use_ssl: uri.scheme == "https",
}

response = Net::HTTP.start(uri.hostname, uri.port, req_options) do |http|
  http.request(request)
end
pp response.body
